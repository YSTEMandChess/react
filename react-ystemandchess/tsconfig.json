{
  "compilerOptions": {
    "jsx": "react", // JSX support for React
    "target": "es5", // Target ECMAScript 5 for compatibility
    "lib": ["dom", "es2015"], // Include DOM and ES2015 libraries
    "esModuleInterop": true, // Enable ECMAScript module interoperability
    "allowSyntheticDefaultImports": true, // Allow synthetic default imports
    "module": "esnext", // Use the latest ES module system
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON files
    "noEmit": false, // Don't emit output (for type checking only)
    "strict": false, // Disable strict type checking
    "typeRoots": [
      "node_modules/@types", // Include types from node_modules/@types
      "src/types" // Custom types (if any) in the `src/types` folder
    ]
  },
  "include": ["src/**/*", "src/lib"],
  "exclude": [
    "node_modules", // Exclude node_modules folder
    "build", // Exclude build output folder (if any)
    "dist" // Exclude dist folder (if any)
  ]
}
